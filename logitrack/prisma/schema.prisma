generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("operator") // admin | driver | operator
  createdAt DateTime @default(now())
}

model Driver {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String
  score     Float     @default(100)
  vehicle   Vehicle[]
  createdAt DateTime  @default(now())
}

model Vehicle {
  id        Int      @id @default(autoincrement())
  plate     String
  model     String
  fuelType  String
  driverId  Int?
  driver    Driver?  @relation(fields: [driverId], references: [id])
  telemetry Telemetry[]
  serviceStatus String default("ok") // ok | due Soon | override
  insuranceExpiry DateTime
  mileage Int
  createdAt DateTime @default(now())
}

model Telemetry {
  id         Int      @id @default(autoincrement())
  vehicleId  Int
  speed      Float
  fuel       Float
  rpm        Float
  temp       Float
  averageFuelConsumption Float
  averageSpeed Float
  averageRpm Float
  emission Float
  errorMessage String
  timestamp  DateTime @default(now())
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
}